<?xml version="1.0"?>
<config>
    <modules>
        <Laposta_Connect>
            <version>1.0.0</version>
            <depends>
                <!-- no dependencies -->
            </depends>
        </Laposta_Connect>
    </modules>
    <frontend>
        <routers>
            <lapostaconnect>
                <use>standard</use>
                <args>
                    <module>Laposta_Connect</module>
                    <frontName>lapostaconnect</frontName>
                </args>
            </lapostaconnect>
        </routers>
        <layout>
            <updates>
                <lapostaconnect>
                    <file>lapostaconnect.xml</file>
                </lapostaconnect>
            </updates>
        </layout>
        <events>
            <customer_save_after>
                <observers>
                    <lapostaconnect_customer_save>
                        <class>lapostaconnect/observer</class>
                        <method>handleCustomerSave</method>
                    </lapostaconnect_customer_save>
                </observers>
            </customer_save_after>
            <customer_delete_after>
                <observers>
                    <lapostaconnect_customer_delete>
                        <class>lapostaconnect/observer</class>
                        <method>handleCustomerDelete</method>
                    </lapostaconnect_customer_delete>
                </observers>
            </customer_delete_after>
        </events>
    </frontend>
    <global>
        <models>
            <lapostaconnect>
                <class>Laposta_Connect_Model</class>
                <resourceModel>lapostaconnect_mysql4</resourceModel>
            </lapostaconnect>
            <lapostaconnect_mysql4>
                <class>Laposta_Connect_Model_Mysql4</class>
                <entities>
                    <subscriber>
                        <table>laposta_subscriber</table>
                    </subscriber>
                    <field>
                        <table>laposta_field</table>
                    </field>
                    <list>
                        <table>laposta_list</table>
                    </list>
                </entities>
            </lapostaconnect_mysql4>
        </models>
        <resources>
            <lapostaconnect_setup>
                <setup>
                    <module>Laposta_Connect</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lapostaconnect_setup>
            <lapostaconnect_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lapostaconnect_write>
            <lapostaconnect_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lapostaconnect_read>
        </resources>
        <blocks>
            <lapostaconnect>
                <class>Laposta_Connect_Block</class>
            </lapostaconnect>
        </blocks>
        <helpers>
            <lapostaconnect>
                <class>Laposta_Connect_Helper</class>
            </lapostaconnect>
        </helpers>
        <extraconfig />
    </global>
    <admin>
        <routers>
            <lapostaconnect>
                <use>admin</use>
                <args>
                    <module>Laposta_Connect</module>
                    <frontName>lapostaconnect</frontName>
                </args>
            </lapostaconnect>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <adminhtml_init_system_config>
                <observers>
                    <laposta_save_config>
                        <class>lapostaconnect/observer</class>
                        <method>handleInitConfig</method>
                    </laposta_save_config>
                </observers>
            </adminhtml_init_system_config>
            <admin_system_config_changed_section_lapostaconnect>
                <observers>
                    <laposta_save_config>
                        <class>lapostaconnect/observer</class>
                        <method>handleSaveConfig</method>
                    </laposta_save_config>
                </observers>
            </admin_system_config_changed_section_lapostaconnect>
            <customer_save_after>
                <observers>
                    <lapostaconnect_customer_save>
                        <class>lapostaconnect/observer</class>
                        <method>handleCustomerSave</method>
                    </lapostaconnect_customer_save>
                </observers>
            </customer_save_after>
            <customer_delete_after>
                <observers>
                    <lapostaconnect_customer_delete>
                        <class>lapostaconnect/observer</class>
                        <method>handleCustomerDelete</method>
                    </lapostaconnect_customer_delete>
                </observers>
            </customer_delete_after>
        </events>
    </adminhtml>
    <default>
